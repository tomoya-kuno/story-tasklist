<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title"><% @task.title %></h5>
      </div>
      <div class="card-body">
        内容＆関連情報
        <br>
        <% @task.content %>
        <br>
        タスク実行日時
        <br>
        <%= @task.start_date.strftime("%Y-%m-%d %H:%M") %>~
        <br>
        <%= @task.end_date.strftime("%Y-%m-%d %H:%M") %>
        <table>
          <tr>
            <td><%= link_to 'edit', edit_task_path(@task) ,class: 'btn btn-success btn-sm'%></td>
            <td><%= link_to 'delete', @task, method: :delete, data: { confirm: 'You sure?' } ,class: 'btn btn-danger btn-sm'%></td>
          </tr>
        </table>
        <!--タスクの詳細を表示する-->
      </div>
    </div>
  </aside>
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <!--All……下記のナビばーをクリックすることにより、全てのタスクを表示する-->
      <li class="nav-item">All</li>
      <!--○/○(○)……下記のナビばーをクリックすることにより、指定の日時のタスクを全て表示する-->
      <!--今日-->
      <li class="nav-item">Today</li>
      <!--明日-->
      <li class="nav-item">Tomorrow</li>
    </ul>
    <%= render 'tasks/tasks', tasks: @tasks%>
  </div>
</div>