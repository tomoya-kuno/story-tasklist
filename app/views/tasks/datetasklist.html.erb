<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title">Let's Do Tasks!</h5>
      </div>
      <div class="card-body">
        <!--ユーザーの目標を記入する欄-->
      </div>
    </div>
    <%= render '../..', ..: @.. %>
    <!--ボタンを押すとtask新規作成画面に移行する-->
  </aside>
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <!--All……下記のナビばーをクリックすることにより、全てのタスクを表示する-->
      <li class="nav-item">All</li>
      <!--○/○(○)……下記のナビばーをクリックすることにより、指定の日時のタスクを全て表示する-->
      <!--今日-->
      <li class="nav-item">Today</li>
      <!--明日-->
      <li class="nav-item">Tomorrow</li>
    </ul>
    <%= render 'tasks/tasks', {tasks: @tasks,date_time: @date_time%>
  </div>
</div>