<div style="margin:10px 5px 10px 5px">
  <font size='2' color='#999999'>タイトル・カードの色は入力必須</font><br>
  <font size='2' color='#999999'>お気に入り評価値は0~3から選択可能</font>
</div>

<%= form_with(model: @story, local: true) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
    <div class="form-group">
      <%= f.label :title, 'タイトル(30字以下)' %>
      <%= f.text_field :title ,class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :content, '内容&関連情報' %>
      <%= f.text_area :content, rows: 5 ,class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.radio_button :favorite_score, 0 %>
      <%= f.label :favorite_score, "☆0", {value: 0, style: "display: inline-block;"} %>
      <%= f.radio_button :favorite_score, 1 %>
      <%= f.label :favorite_score, "☆1", {value: 1, style: "display: inline-block;"} %>
      <%= f.radio_button :favorite_score, 2 %>
      <%= f.label :favorite_score, "☆2", {value: 2, style: "display: inline-block;"} %>
      <%= f.radio_button :favorite_score, 3 %>
      <%= f.label :favorite_score, "☆3", {value: 3, style: "display: inline-block;"} %>
    </div>
    <div class="field" style="margin:0px 0px 25px 0px">
      <%= f.label :card_color, 'カードの色' %>
      <%= f.select :card_color, {'赤': 'danger', '黄': 'warning','緑': 'success', '青': 'primary', '黒': 'dark'}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
    </div>
    
    <%= f.hidden_field :status, :value => "unread" %>
    <%= f.submit 'Add', class: 'btn btn-primary btn-block'%>
<% end %>



  